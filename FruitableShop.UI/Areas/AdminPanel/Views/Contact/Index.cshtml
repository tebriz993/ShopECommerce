@using ShopECommerce.BusinessLogic.Dtos.ContactDtos;
@model IEnumerable<ContactViewDto>

@{
    int count = 1;
}

<style>
    .custom-card {
        padding: 20px;
        margin: 10px;
        border-radius: 20px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
    }

        .custom-card .card-body {
            padding: 20px;
        }

        .custom-card h4.card-title {
            font-size: 2rem;
        }

        .custom-card .table {
            margin-top: 20px;
            font-size: 1.25rem;
        }

            .custom-card .table th,
            .custom-card .table td {
                padding: 20px;
            }

        .custom-card .btn {
            font-size: 1rem;
            padding: 10px 20px;
        }

            .custom-card .btn i {
                font-size: 1.2rem;
            }

        .custom-card img {
            transition: transform 0.9s ease-in-out;
        }

            .custom-card img:hover {
                transform: scale(5);
            }
</style>

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card shadow-sm custom-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="card-title mb-0">Şirkət nisbətləri</h4>
                        <a asp-controller="Contact" asp-action="Create" class="btn btn-info">Əlavə edin</a>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">Sıra Nömrəsi</th>

                                    <th scope="col">Adres İkonu</th>
                                    <th scope="col">Adres</th>
                                    <th scope="col">Adres məzmunu</th>

                                    <th scope="col">Email İkonu</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Email məzmunu</th>

                                    <th scope="col">Telefon İkon</th>
                                    <th scope="col">Telefon</th>
                                    <th scope="col">Telefon məzmunu</th>
                                   
                                    <th scope="col">Ayarlar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var contacts in Model)
                                {
                                    <tr>
                                        <td>@(count++)</td>
                                        <td>@contacts.AddressIcon</td>
                                        <td>@contacts.Address</td>
                                        <td>@contacts.AddressText</td>

                                        <td>@contacts.MailIcon</td>
                                        <td>@contacts.Mail</td>
                                        <td>@contacts.MailText</td>

                                        <td>@contacts.TelephoneIcon</td>
                                        <td>@contacts.Telephone</td>
                                        <td>@contacts.TelephoneText</td>
                                        <td>
                                            <a asp-controller="Contact" asp-action="Update" asp-route-id="@contacts.Id" class="btn btn-warning btn-sm">
                                                <i class="mdi mdi-grease-pencil"></i>
                                            </a>
                                            <a asp-controller="Contact" asp-action="Delete" asp-route-id="@contacts.Id" class="btn btn-danger btn-sm">
                                                <i class="mdi mdi-delete"></i>
                                            </a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

